<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Alerts</title>
    <link rel="stylesheet" type="text/css" href="/main.css">
</head>
<body>
    <h1>Create Alerts</h1>
    <form action="/createAlert" method="post">
        <label for="itemName">Item Name:</label>
        <select id="itemName" name="itemName" required>
            <!--options from the items array-->
            <% items.forEach(function(item) { %>
                <option value="<%= item.name %>"><%= item.name %></option>
            <% }); %>
        </select>

        <br>

        <label for="threshold">Alert Threshold:</label>
        <input type="number" id="threshold" name="threshold" min="1" required>

        <br>

        <input type="submit" value="Create Alert">
    </form>

    <p><a href="/">Back to Home</a></p>
</body>
</html>
