<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View Statistics</title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
</head>

<body>
    <h1>View Statistics</h1>
    <div id="app" class="container">
        <label for="itemSelect">Select Item:</label>
        <!--dropdown menu to select different items-->
        <select id="itemSelect">
            <!--options will be populated dynamically-->
        </select>

        <!--add a canvas element for the chart-->
        <div>
            <canvas id="storageChart" width="400" height="400"></canvas>
        </div>
    </div>
    <!--include Chart.js and the viewStatisticsScript.js file-->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/viewStatisticsScript.js"></script>
</body>

</html>
